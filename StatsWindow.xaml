<Window x:Class="StretchReminderApp.UI.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stretching Statistics" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" 
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Your Stretching Stats" 
                   FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"
                   Foreground="#2E7D32"/>

        <!-- Streak Information -->
        <Border Grid.Row="1" Background="White" CornerRadius="8"
                BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,15"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Current Streak -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current Streak" 
                              FontSize="16" Foreground="#555555"/>
                    <TextBlock x:Name="CurrentStreakText" 
                              FontSize="28" FontWeight="Bold" Foreground="#2E7D32"
                              Text="0 days"/>
                </StackPanel>

                <!-- Completion Rate -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Completion Rate" 
                              FontSize="16" Foreground="#555555"/>
                    <TextBlock x:Name="CompletionRateText" 
                              FontSize="28" FontWeight="Bold" Foreground="#2E7D32"
                              Text="0%"/>
                </StackPanel>

                <!-- Total Sessions -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Total Sessions" 
                              FontSize="16" Foreground="#555555"/>
                    <TextBlock x:Name="TotalSessionsText" 
                              FontSize="28" FontWeight="Bold" Foreground="#2E7D32"
                              Text="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Calendar View Label -->
        <TextBlock Grid.Row="2" Text="Activity Calendar" 
                   FontSize="18" FontWeight="SemiBold" Margin="0,10,0,10"
                   Foreground="#2E7D32"/>

        <!-- Calendar View -->
        <Border Grid.Row="3" Background="White" CornerRadius="8"
                BorderBrush="#DDDDDD" BorderThickness="1" Padding="15"
                Margin="0,0,0,15">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="CalendarPanel" Orientation="Horizontal"/>
            </ScrollViewer>
        </Border>

        <!-- Monthly Progress Chart -->
        <Border Grid.Row="4" Background="White" CornerRadius="8"
                BorderBrush="#DDDDDD" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Monthly Progress" 
                           FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"
                           Foreground="#2E7D32"/>

                <Canvas Grid.Row="1" x:Name="ChartCanvas" ClipToBounds="True"/>
            </Grid>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="5" Content="Close" Width="100" Height="35"
                HorizontalAlignment="Right" Margin="0,15,0,0"
                Click="CloseButton_Click" Background="#2E7D32"
                Foreground="White" BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>