<Window x:Class="StretchTracker.UI.StretchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time to Stretch!" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI">
    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="21"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="21"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Let's Move and Stretch!" 
                       FontSize="28" FontWeight="SemiBold" 
                       Foreground="#2E7D32" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Make big, exaggerated movements to register your stretches" 
                       FontSize="16" 
                       Foreground="#555555" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Camera Preview -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="12" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" Direction="270" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Image x:Name="WebcamPreview" Stretch="Uniform" Margin="10"/>

                <!-- Overlay for calibration phase -->
                <Border x:Name="CalibrationOverlay" 
                        Background="#88000000" 
                        Visibility="Visible">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Calibrating..." 
                                   FontSize="24" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Please remain still" 
                                   FontSize="18" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="ProgressText" 
                           Text="Stretch progress: 0/5" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" x:Name="CounterText" 
                           Text="0/5" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           VerticalAlignment="Center"/>
            </Grid>

            <ProgressBar x:Name="ProgressBar"
                         Style="{StaticResource ProgressBarStyle}"
                         Minimum="0" Maximum="100" Value="0"/>

            <TextBlock x:Name="StatusTextBlock" 
                       Margin="0,15,0,0"
                       Text="Waiting for camera..."
                       FontSize="16"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <TextBlock Text="Tip: " 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Try neck rolls, shoulder stretches, or side bends" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" x:Name="SkipButton" 
                    Content="Skip for today" 
                    Style="{StaticResource SecondaryButton}"
                    Click="SkipButton_Click"/>
        </Grid>
    </Grid>
</Window>