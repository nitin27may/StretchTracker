<Application x:Class="StretchReminderApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:StretchReminderApp">
    <Application.Resources>
        <ResourceDictionary>
            <tb:TaskbarIcon x:Key="NotifyIcon"
                            IconSource="pack://application:,,,/Resources/stretch_icon.ico"
                            ToolTipText="Stretch Reminder">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="View Stats" Click="StatsMenuItem_Click"/>
                        <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>